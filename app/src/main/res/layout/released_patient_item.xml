<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="95dp"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@drawable/box"
android:layout_margin="1dp">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/released_patientPicIv"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_margin="8dp"
    android:layout_marginLeft="3dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />

<TextView
    android:id="@+id/name_patientTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toEndOf="@id/released_patientPicIv"
    app:layout_constraintBottom_toTopOf="@id/lastname_patientTv"
    android:layout_marginStart="5dp"
    android:textSize="12dp"
    android:textStyle="bold"/>

<TextView
    android:id="@+id/lastname_patientTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/name_patientTv"
    app:layout_constraintBottom_toBottomOf="@id/released_patientPicIv"
    app:layout_constraintStart_toEndOf="@id/released_patientPicIv"
    android:layout_marginStart="5dp"
    android:textSize="12dp"
    android:textStyle="bold"/>

<TextView
    android:id="@+id/dateTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/released_patientPicIv"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:textStyle="bold"
    android:textSize="12dp"
    />




</androidx.constraintlayout.widget.ConstraintLayout>