<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".valerija_nagl_rn682018.application.view.fragments.RecyclerHospitalizedFragment">

    <LinearLayout
        android:id = "@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/listHospitalizovaniRv"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/filterHospitalizedBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_search"
            android:layout_margin="10dp"
            />

        <EditText
            android:id="@+id/filterHospitalizedEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="@string/cekaonica_search"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listHospitalizovaniRv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/layout2"
        app:layout_constraintTop_toTopOf="@id/layout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>